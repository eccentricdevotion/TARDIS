	<!-- Profiles are used to detect whether this is a local or Jenkins build and adjust the build number accordingly -->
	<profiles>
		<profile>
			<id>local</id>
			<activation>
				<property>
					<name>!env.BUILD_NUMBER</name>
				</property>
			</activation>
			<properties>
				<!-- Set the build number to the date and time of the build -->
				<project.buildNumber>${timestamp}</project.buildNumber>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>buildnumber-maven-plugin</artifactId>
						<version>1.4</version>
						<configuration>
							<revisionOnScmFailure>no.scm.config.in.pom</revisionOnScmFailure>
						</configuration>
						<executions>
							<execution>
								<id>create-timestamp-id</id>
								<phase>validate</phase>
								<goals>
									<goal>create-timestamp</goal>
								</goals>
								<configuration>
									<timestampFormat>dd.MM.yy-HH:mm</timestampFormat>
									<!-- formats the timestamp all together like 04.12.16-14:17 and puts it in the ${myBuildNumber} buildProperty -->
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>jenkins</id>
			<activation>
				<property>
					<name>env.BUILD_NUMBER</name>
				</property>
			</activation>
			<properties>
				<!-- Get the build number from Jenkins -->
				<project.build.number>${env.BUILD_NUMBER}</project.build.number>
				<javadocExecutable>${java.home}/../bin/javadoc</javadocExecutable>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<version>3.2.0</version>
						<configuration>
							<quiet/>
							<excludePackageNames>com.*:org.*</excludePackageNames>
						</configuration>
						<executions>
							<execution>
								<id>javadoc-jar</id>
								<phase>verify</phase>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<build>
		<finalName>${project.artifactId}-${project.version}-${project.buildNumber}</finalName>
		<defaultGoal>clean package</defaultGoal>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.1</version>
				<configuration>
					<source>16</source>
					<target>16</target>
				</configuration>
			</plugin>
			<!-- Insert the build number into plugin.yml -->
			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>maven-replacer-plugin</artifactId>
				<version>1.4.1</version>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>replace</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<file>target/classes/plugin.yml</file>
					<replacements>
						<replacement>
							<token>maven-version-number</token>
							<value>${project.version}-${project.buildNumber}</value>
						</replacement>
						<replacement>
							<token>maven-build-number</token>
							<value>${project.buildNumber}</value>
						</replacement>
					</replacements>
				</configuration>
			</plugin>
			<!-- Shade all Libs -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.2.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<minimizeJar>true</minimizeJar>
							<createDependencyReducedPom>false</createDependencyReducedPom>
							<artifactSet>
								<includes>
									<include>org.rauschig:jarchivelib</include>
									<include>org.apache.commons:commons-compress</include>
									<include>io.papermc:paperlib</include>
								</includes>
							</artifactSet>
							<relocations>
								<relocation>
									<pattern>org.apache.commons:commons-compress</pattern>
									<shadedPattern>lib:commons-compress</shadedPattern>
								</relocation>
								<relocation>
									<pattern>org.rauschig:jarchivelib</pattern>
									<shadedPattern>lib:jarchivelib</shadedPattern>
								</relocation>
								<relocation>
									<pattern>io.papermc:lib</pattern>
									<shadedPattern>lib:paperlib</shadedPattern>
								</relocation>
							</relocations>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/MANIFEST.MF</exclude>
									</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- Manifest generation for database conversion tool -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.2.0</version>
				<configuration>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<manifestEntries>
							<Main-Class>me.eccentric_nz.tardis.database.tool.Main</Main-Class>
							<Implementation-Title>${project.name}</Implementation-Title>
							<Implementation-Version>${project.version}</Implementation-Version>
							<Implementation-Build>${project.buildNumber}</Implementation-Build>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<appendAssemblyId>false</appendAssemblyId>
					<archive>
						<manifest>
							<mainClass>me.eccentric_nz.tardis.database.tool.Main</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>directory-single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
